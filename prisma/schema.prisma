// Prisma schema for guest comments with context-bound anonymous identities

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Guest {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  createdAt DateTime  @default(now())
  names     GuestArticleName[]
  comments  Comment[]
  reactions CommentReaction[]
}

model Article {
  id        Int       @id @default(autoincrement())
  slug      String    @unique
  title     String
  createdAt DateTime  @default(now())
  names     GuestArticleName[]
  comments  Comment[]
}

model GuestArticleName {
  id           Int     @id @default(autoincrement())
  guestId      Int
  articleId    Int
  anonUsername String
  createdAt    DateTime @default(now())

  guest   Guest   @relation(fields: [guestId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([guestId, articleId])
  @@index([articleId, anonUsername])
}

model Comment {
  id           Int      @id @default(autoincrement())
  articleId    Int
  guestId      Int
  anonUsername String
  content      String
  parentId     Int?     // null for top-level comments, set for replies
  createdAt    DateTime @default(now())

  guest   Guest   @relation(fields: [guestId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  parent  Comment? @relation("CommentToReplies", fields: [parentId], references: [id])
  replies Comment[] @relation("CommentToReplies")
  reactions CommentReaction[]

  @@index([articleId, createdAt])
}

model CommentReaction {
  id        Int      @id @default(autoincrement())
  commentId Int
  guestId   Int
  emoji     String
  createdAt DateTime @default(now())

  comment Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)
  guest   Guest   @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@unique([commentId, guestId, emoji])
  @@index([commentId, emoji])
}


